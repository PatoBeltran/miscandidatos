<%= form_for @geographical_area do |f| %>
  <div class="col-12">
    <%= f.label :city, "Ciudad" %>
    <%= f.text_field :city %>
  </div>
  <div class="col-12">
    <%= f.label :state, "Estado" %>
    <%= f.text_field :state %>
  </div>
  <div class="col-12">
    <%= f.label :color, "Color" %>
    <%= f.color_field :color %>
  </div>
  <div class="col-12">
    <%= f.submit "Enviar", class: "button primary block" %>
  </div>
<% end %>
