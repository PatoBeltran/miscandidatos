</head>

<body>
  <nav class="navigation-bar">
   <ul class="brand-section">
     <li class="brand-name">
     <a href="/" class="menu-trigger" id="trigger"><%= image_tag "logo.png", class: "responsive logo-img" %></a>
     </li>
     <li class="menu-toggle">
      <a href="#">Menu</a>
     </li>
   </ul>
   <ul>
     <li class="divider"></li>
     <li><%= link_to "Perfiles", profiles_path %></li>
     <li class="divider"></li>
     <li><%= link_to "Marco Legal", legal_path %></li>
     <li class="divider"></li>
     <li><%= link_to "Formas de financiamiento", finance_path %></li>
     <li class="divider"></li>
     <li><%= link_to "Reglas de candidatura", rules_path %></li>
     <% if user_signed_in? %>
       <li class="divider"></li>
       <li class="with-dropdown">
         <a href="#"><span>Dashboard </span><%= fa_icon "arrow-down" %></a>
         <ul class="dropdown">
           <li><%= link_to "Candidatos", candidates_path %></li>
           <li><%= link_to "Partidos Políticos", political_parties_path %></li>
           <li><%= link_to "Areas Geográficas", geographical_areas_path %></li>
           <% if current_user.admin? %>
             <li class="divider"></li>
             <li><%= link_to "Usuarios", users_path %></li>
           <% end %>
         </ul>
       </li>
       <li class="divider"></li>
       <li><%= link_to "Cerrar Sesión", destroy_user_session_path, method: :delete %></li>
     <% end %>
   </ul>
  </nav>
  <% flash.each do |key, value| %>
    <div class="alert <%= key %>">
      <a href="#" class="close">x</a>
      <%= value %>
    </div>
  <% end %>
  <%= yield %>
  <footer>
    <hr />
    © YoElijo, 2015. <br />
    <div class="disclaimer">
      YoElijo.mx no esta afiliado a ningún partido político y su único objetivo es promover la participación democrática y la información objetiva sobre los candidatos a puestos políticos en México.
    </div>
  </footer>
  <%= javascript_include_tag "application" %>
</body>
</html>
