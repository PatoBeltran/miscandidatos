<div class="container wrapper">
  <div class="pull-right">
    <%= link_to new_political_party_path do %>
      <%= fa_icon "plus-square-o" %> <span>Agregar</span>
    <% end %>
  </div>
  <div>
    <h3>Partidos Pol√≠ticos</h3>
    <div class="row">
      <% @political_parties.each do |element| %>
        <div class="col-6 el-wrapper">
          <div class="el-inner row">
            <div class="col-6">
              <div><%= element.name %></div>
              <div><%= element.abbreviation %></div>
              <div class="color-addon" style="background-color: <%= element.color %>"></div>
            </div>
            <div class="col-6">
              <span class="col-12">
                <%= link_to edit_political_party_path(element) do %>
                  <%= fa_icon "pencil-square-o 1x" %> <span>Editar</span>
                <% end %>
              </span>
              <span class="col-12">
                <%= link_to element, method: :delete do %>
                  <%= fa_icon "trash-o 1x" %> <span>Eliminar</span>
                <% end %>
              </span>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

