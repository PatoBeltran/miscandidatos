<div class="candidate-areas" id="js-candidate-areas" data-area="governor">
  <% @areas.each do |area| %>
    <% if area.name == "Gubernatura" %>
      <div class="area area-main"><%= link_to area.name, profiles_governor_path %></div>
  <% else %>
      <div class="area"><%= link_to area.name, profiles_mayor_path %></div>
    <% end %>
  <% end %>
</div>
<div class="candidate-filters">
  <div class="filter"><%= link_to "Todos", "#", class: "js-filter-link", data: { filter: "*" } %></div>
  <% @filters.each do |filter| %>
    <div class="filter"><%= link_to filter.abbreviation, "#", class: "js-filter-link", data: { filter: ".#{filter.abbreviation.delete(" ").delete(".") }" } %></div>
  <% end %>
</div>
<ul class="wrapper container row" id="js-candidate-container">
  <% @candidates.each do |candidate| %>
    <li class="candidate-show col-3 <%= candidate.political_party.abbreviation.delete(" ").delete(".") %>">
    <%= link_to candidate, class: "candidate-inner-wrapper" do %>
        <div class="image-wrapper">
          <% if candidate.image.present? %>
            <%= image_tag "placeholder.jpg", data: { src: candidate.image.to_s }, class: "responsive lazy" %>
          <% else %>
            <%= image_tag "placeholder.jpg", class: "responsive" %>
          <% end %>
        </div>
        <div class="name-wrapper row">
          <div class="inner-name col-7">
            <%= candidate.name %>
          </div>
          <div class="col-5 political-party row">
            <div class="political-party-abbreviation col-12">
              <%= candidate.political_party.abbreviation %>
            </div>
          </div>
          <div class="category-color col-12" style="background-color: <%= candidate.political_party.color %>"></div>
        </div>
      <% end %>
    </li>
  <% end %>
</ul>
